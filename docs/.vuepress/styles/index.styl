// Dark theme
.resume-class
  // color: #ffffff
  // a.sidebar-link, .site-name
  //   color: #ffffff !important
  .sidebar, .navbar, .page, .links
    background-color: rgb(253,241,230) !important
  h1, h2, h3, h4, h5, h6
    font-family: 'Hiragino Kaku Gothic Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  .subtitle
    margin-top: 0px
  h1.display
    font-size: 60px
    font-family: 'Roboto Slab', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    font-weight: 700
  .content.default
    width: 36em
    margin: 0 auto
    max-width: 100%
    line-height: 1.5
  p
    font-size: 18px
  h2
    font-size: 24px
    color: #3eaf7c
  h3 
    font-size: 18px
  @media only screen and (max-width: 320px)
    p
      font-size: 16px
    .content.default
      width: 16em
  @media only screen and (max-width: 640px)
    p
      font-size: 17px
    .content.default
      width: 18em
